namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {int a;
            Console.WriteLine("Введите число");
            a = Convert.ToInt32(Console.ReadLine());
            if (a % 2 == 0)
                Console.WriteLine(a / 2);
            else if (a % 2 == 1)
                Console.WriteLine((a + 1) / 2);
            Console.ReadKey ();
        }
    }
}




